        let currentQuestionIndex = 0;
        let score = 0;
        let answeredCorrectly = false; // Flag to prevent multiple clicks on answers

        const questionTextElement = document.getElementById('question-text');
        const answerOptionsElement = document.getElementById('answer-options');
        const feedbackTextElement = document.getElementById('feedback-text');
        const hintTextElement = document.getElementById('hint-text');
        const nextButton = document.getElementById('next-button');
        const quizResultsElement = document.getElementById('quiz-results');
        const questionAreaElement = document.getElementById('question-area');
        const finalScoreElement = document.getElementById('final-score');
        const totalQuestionsElement = document.getElementById('total-questions');
        const restartButton = document.getElementById('restart-button');

        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]]; // Swap elements
            }
        }

        function loadQuestion() {
            if (currentQuestionIndex >= quizData.questions.length) {
                showResults();
                return;
            }

            answeredCorrectly = false;
            const question = quizData.questions[currentQuestionIndex];
            questionTextElement.textContent = question.question;
            answerOptionsElement.innerHTML = '';
            feedbackTextElement.textContent = '';
            hintTextElement.textContent = ''; // Clear hint for new question
            nextButton.style.display = 'none'; // Hide next button initially

            const shuffledOptions = [...question.answerOptions];
            shuffleArray(shuffledOptions);

            shuffledOptions.forEach(option => {
                const button = document.createElement('button');
                button.textContent = option.text;
                button.classList.add('rounded-xl', 'shadow-sm'); // Tailwind classes for styling
                button.onclick = () => selectAnswer(button, option.isCorrect, option.rationale);
                answerOptionsElement.appendChild(button);
            });
        }

        function selectAnswer(selectedButton, isCorrect, rationale) {
            if (answeredCorrectly) { // Prevent multiple clicks
                return;
            }
            answeredCorrectly = true;

            // Disable all buttons
            Array.from(answerOptionsElement.children).forEach(button => {
                button.disabled = true;
            });

            if (isCorrect) {
                selectedButton.classList.add('correct');
                feedbackTextElement.textContent = 'Correct! ' + rationale;
                score++;
            } else {
                selectedButton.classList.add('incorrect');
                feedbackTextElement.textContent = 'Incorrect. ' + rationale;
                // Highlight correct answer if incorrect
                Array.from(answerOptionsElement.children).forEach(button => {
                    const originalOption = quizData.questions[currentQuestionIndex].answerOptions.find(opt => opt.text === button.textContent);
                    if (originalOption && originalOption.isCorrect) {
                        button.classList.add('correct');
                    }
                });
            }

            // Show hint after answer is selected
            hintTextElement.textContent = 'Hint: ' + quizData.questions[currentQuestionIndex].hint;
            nextButton.style.display = 'block'; // Show next button
        }

        function showResults() {
            questionAreaElement.classList.add('hidden');
            quizResultsElement.classList.remove('hidden');
            finalScoreElement.textContent = score;
            totalQuestionsElement.textContent = quizData.questions.length;
        }

        function restartQuiz() {
            currentQuestionIndex = 0;
            score = 0;
            quizResultsElement.classList.add('hidden');
            questionAreaElement.classList.remove('hidden');
            loadQuestion();
        }

        nextButton.addEventListener('click', () => {
            currentQuestionIndex++;
            loadQuestion();
        });

        restartButton.addEventListener('click', restartQuiz);

        // Initial load
        window.onload = loadQuestion;
    </script>
</body>
</html>
